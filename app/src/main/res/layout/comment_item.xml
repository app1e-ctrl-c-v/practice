<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button3"
    android:layout_marginBottom="15dp"
    android:padding="10dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/illustration3"
        android:id="@+id/avatar_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/avatar_icon"
        android:fontFamily="@font/rubik_medium"
        android:textSize="20sp"
        android:gravity="center_vertical|start"
        android:id="@+id/name_user"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/avatar_icon"
        android:text="jbprtjm"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:id="@+id/content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.3"
        android:fontFamily="@font/rubik_bold"
        android:id="@+id/rating"
        app:layout_constraintTop_toBottomOf="@+id/content"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14.2343.23"
        android:id="@+id/date"
        android:fontFamily="@font/rubik"
        android:textColor="@color/accent2"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="14sp"/>




</androidx.constraintlayout.widget.ConstraintLayout>