<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".SecondFragment"
    android:padding="20dp">

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/go_back"
        android:background="@drawable/button4"
        android:id="@+id/button_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/profile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:fontFamily="@font/rubik_medium"
        android:text="@string/menu_profile"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:id="@+id/avatar_icon"
        android:src="@drawable/profile_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_title" />
    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="50dp"
        android:id="@+id/avatar_rame"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_title"
        android:src="@drawable/avatar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_icon"
        android:layout_marginTop="30dp"
        android:background="@color/white">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button3"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/profile_courses"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:padding="20dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/button_courses_user"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button3"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/profile_saves"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:padding="20dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/button_saved_user"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button3"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/profile_payment"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:padding="20dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/button_payment_user"/>
        <TextView
            android:id="@+id/log_out_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="@string/logout_title"
            android:textSize="14sp"
            android:textColor="@color/accent2"
            android:textAlignment="center"
            android:linksClickable="true"
            android:layout_margin="10dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>