<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FirstFragment"
    android:background="@color/white"
    android:padding="15dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        android:textSize="16sp"
        android:fontFamily="@font/rubik"
        android:id="@+id/hello_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name_user"
        android:id="@+id/name_user_title"
        app:layout_constraintTop_toBottomOf="@+id/hello_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/rubik_bold"
        android:textSize="32sp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:id="@+id/button_notification"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/notification_buttin"/>


    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_user_title"
        android:id="@+id/search"
        android:background="@drawable/button3"
        android:padding="5dp"
        android:queryHint="@string/search"
        android:iconifiedByDefault="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:textSize="14sp"
        android:fontFamily="@font/rubik"
        app:layout_constraintTop_toBottomOf="@+id/search"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:id="@+id/text_category"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/search"
        app:layout_constraintLeft_toRightOf="@+id/text_category"
        android:id="@+id/list_category"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="25dp"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_category"
        android:id="@+id/courses_list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

